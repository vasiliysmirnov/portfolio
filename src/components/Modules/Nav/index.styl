
.secondarynav
  position absolute
  top 5vh
  left calc(50vw - 284px)

.secondarynav--top
  top 5vh
  bottom auto
  .links
    color #333
    font-weight 400

.links
  margin-right 3vh
  padding-bottom 2px
  font-size 14px
  font-weight 300
  letter-spacing 0.7px
  color white
  opacity 0.7
  font-family: 'Roboto'
  &:hover
    cursor pointer
    opacity 1
    border-bottom 1px solid #FFDA40
