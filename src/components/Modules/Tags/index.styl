
.tagblock
  position absolute
  width 100%
  bottom 0px
  display flex
  flex-wrap wrap
  padding-left 8px

.tag
  text-align center
  background-color #F2B22A
  border-radius 20px
  padding 4px 8px 4px 8px
  margin 0 8px 8px 0
  font-size 10px
  font-weight 500
  letter-spacing 0.7px
  &:hover
    opacity 0.7
