.wrap
  width calc(100% / 4 * 3)
  overflow-x hidden

.project-list
  display flex
  flex-flow row wrap
  height 88vh
  align-content flex-start

.project
  position relative
  width calc(100% / 3)
  display flex
  align-items flex-start
  justify-content flex-start
  flex-wrap wrap


.cover
  width 100%
  &:hover
    opacity 0.7

.tagblock
  position absolute
  width 100%
  bottom 0px
  display flex
  flex-wrap wrap
  padding-left 8px

.tag
  text-align center
  background-color #F2B22A
  border-radius 20px
  padding 4px 8px 4px 8px
  margin 0 8px 8px 0
  font-size 10px
  font-weight 500
  letter-spacing 0.7px
  &:hover
    opacity 0.7
