
.wrap
  height 49vh

.project-tag
  margin-left: 30px
  margin-top 4vh
  display flex
  align-items flex-start
  flex-direction column
  flex-wrap wrap
  color #4A4A4A
  font-size 14px
  text-transform uppercase
  &:before
    position: absolute;
    left 7px
    content ''
    background no-repeat center url('./assets/img/Apostrof-sm.svg')
    width 12px
    height 15px

.project
  display flex
  padding-top: 4vh
  color #CDCDCD
  font-weight 300
  text-transform none
  width 20vw
  height 22px
  &:hover + .cover
    opacity 1

.title
  display flex
  width 100%
  height 22px

.cover
  position absolute
  left 0
  opacity 0.1
