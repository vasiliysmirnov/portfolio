.wrap
  display flex
  width 100%
  height 30vh
  justify-content center
  align-items center

.wrap--inside
  display flex
  height 88vh
  width calc(100% / 4)
  justify-content flex-start
  align-items center
  background-color: #333

.centerblock
  display flex
  align-items center
  height 100%

.herman
  display flex
  width auto
  height 100%

.herman--no-image
  display none

.linksblock
  padding-left 4vh

.mainLinks
  display block
  width 100%
  display flex
  font-family 'Noto Serif', serif
  font-weight 700
  font-size 3vh
  &:not(:last-child)
    margin-bottom 4vh
  &:hover
    cursor pointer
    text-decoration underline

.mainLinks--white
  color white
